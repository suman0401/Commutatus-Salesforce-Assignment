<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(Phone, &quot;^\\d{10}$&quot;))</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Your Phone number does not match with 10-digit US/Canadian numbers.</errorMessage>
</ValidationRule>
